@import './variables.styl';

//portfolio button to gallery
.btn
  margin-top 45px
  margin-bottom 25px
  .button
    padding 4px 30px
    background-color $Gray - 70%
    border none
    font-size 1.4rem
    cursor pointer
    transition .5s
    box-shadow 0 0 5px 2px $Gray
    > i
      color $Gray + 80%
      margin-right 15px
    > p
      display inline
      color $Gray + 80%
      &:last-child
        color $red
    &:hover
      background-color $Gray - 30%
      color $Gray + 80%
      transition .5s

//contacts button to submit
.btn__little
  display flex
  justify-content flex-end
  margin-top 5px
  margin-bottom 5px
  .button
    padding 2px 10px
    font-size 1rem

//button scroll
.btn__scroll
  padding 7px 15px
  border none
  border-radius 5px
  background-color alpha($Gray - 90%, .7)
  cursor pointer
  transition .5s
  box-shadow 0 0 5px 2px $Gray
  &:hover
    background-color alpha($Gray - 50%, .7)
    transition .5s
  > i
    color $red
    font-size 1.5rem
    transition .5s

//buttons modal remove
.btn__remove
  box-sizing border-box
  background none
  border 1px solid alpha($black, 0)
  padding 4px 9px
  position absolute
  top 1%
  right 2%
  cursor pointer
  color $Gray
  font-size 1.3rem
  font-weight 500
  transition .5s
  &:hover
    box-sizing border-box
    border 1px solid $red
    border-radius 17px
    color $Gray + 40%
    background-color alpha($Gray, .15)
    transform-origin center
    transform rotate(180deg)
    transition .5s

//button modal next, prev
.previous,
.next
  margin 50px
  background-color alpha($Gray, .1)
  font-size 2.5rem
  color $white
  cursor pointer
  padding 60px 35px
  transition .4s
  z-index 10
  &:hover
    background-color alpha($Gray, .2)
    transition .4s

@media screen and (max-width: 768px)
//button modal next, prev
  .previous,
  .next
    margin 5px
    padding 60px 20px