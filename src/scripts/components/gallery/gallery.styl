@import './../../../styles/variables.styl';

.gallery
  box-sizing border-box
  .page-content-L
    display flex
    .page-content-M
      box-sizing border-box
      .content-wrapper
        border 1px solid $Gray + 30%
        margin 64px 5px
        text-align center
        box-shadow 0 0 5px 1px $Gray + 20%
        > h3
          margin 10px
          font-weight 100
        > p
          margin 15px
          font-style italic
          font-weight 100
        .content-block
          .item
            overflow hidden
            box-sizing border-box
            padding 3px
            font-size 0
            cursor pointer
            > img
              max-width 100%
              box-sizing border-box
              opacity 0.75
              transition .5s
            &:hover
              > img
                opacity 1
                transform scale(1.05, 1.05)
                transition .5s