@import './../../../styles/variables.styl';

.gallery
  box-sizing border-box
  .page-content-L
    display flex
    .page-content-M
      box-sizing border-box
      .content-wrapper
        border 1px solid $Gray + 30%
        margin 64px 5px
        text-align center
        box-shadow 0 0 5px 1px $Gray + 20%
        > h3
          margin 10px
          font-weight 100
        > p
          margin 15px
          font-style italic
          font-weight 100
        .content-block

          .item
            box-sizing border-box
            padding 5px
            font-size 0
            cursor pointer
            > img
              max-width 100%
              box-sizing border-box
              opacity 0.75
              transition .5s
            &:hover
              transform scale(1.02, 1.02)
              transition .5s
              > img
                box-shadow 0 0 4px 4px $Gray
                transition .5s
                opacity 1

        .btn
          margin 0 auto
          padding-top 64px
          button
            padding 10px 20px
            border none
            font-size 1rem
            color $Gray - 30%
            background-color $Gray + 50%
            cursor pointer
            &:hover
              background-color $Gray - 30%
              color $Gray + 10%
              transition .5s