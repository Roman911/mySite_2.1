@import './../../../styles/variables.styl';

.modalBg
  display none
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh
  background-color alpha($Gray, .75)
  z-index 10
  .modalWindow
    position fixed
    border 1px solid $Gray + 40%
    width 60%
    max-height 100%
    top 50%
    left 50%
    transform translate(-50%, -50%)
    background-color $white
    > img
      width 100%
      height 100px

.modalBg.showed
  display block