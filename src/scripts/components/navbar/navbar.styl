@import './../../../styles/variables.styl';

.navbar
	&-mob
		display none
		&__btn
			position fixed
			top 5%
			left 7%
			z-index 3
			padding 5px
			cursor pointer
			> i
				color $Gray - 50%
				font-size 2.5rem
				transition .5s
			> p
				color $Gray - 50%
		&__list
			position fixed
			width 100vw
			height 100vh
			display flex
			flex-direction column
			justify-content center
			align-items center
			background-color $white
			z-index 2
			transform translateX(-100%)
			transition .4s
	&-disc
		box-sizing border-box
		position absolute
		top 0
		width 100%
		display flex
		justify-content start
		align-content center
		background-color alpha($white, .5)
		box-shadow 0 0 5px 5px $Gray
		z-index 1
		font-family Font Awesome
	&-link
		padding .8rem 1.8rem
		display flex
		align-items center
		font-size 1.2rem
		color $Gray
		> p
			line-height 0
			margin-left 10px
		&:hover
			background alpha($white, .5)
	.active
		background-color alpha($Gray - 50%, .7)
		color $Gray + 90%
		> p
			color $Gray + 90%

.navbar-mob.showed
	.navbar-mob
		&__btn
			> i
				transform rotate(180deg)
		&__list
			transform translateX(0)

.navbar-disc.fixed
	position fixed
	background-color alpha($white, .9)
	animation-name example
	animation-duration .5s


@keyframes example
	0%
		transform translateY(-100%)
	100%
		transform translateY(0%)

@media screen and (max-width: 768px)
	.navbar
		&-mob
			display block
		&-disc
			display none
		&-link
			font-size 1.5rem
			padding 30px 0
		.active
			width 100%
			display flex
			justify-content center