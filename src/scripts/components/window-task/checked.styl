@import './../../../styles/variables.styl';

.controls
  > label
    display flex
    align-items center
    > input
      display none
    .input
      position relative
      display flex
      .deg
        height 2px
        border 1px solid $Gray + 10%
        border-radius 10px
        padding 5px 15px
        font-size 0
        background-color $Gray + 40%
        box-shadow 2px 2px 10px 1px $Gray + 40%
      .rad
        position absolute
        left 0
        top 50%
        transform translate(-50%, -50%)
        border 1px solid $Gray
        border-radius 10px
        background-color $Gray + 20%
        padding 8px
    > p
      margin-left 15px
      font-style italic

  > label.showed
    > p
      color $darkBlue
    .deg
      background-color $darkBlue + 50%
    .rad
      left 100%
      background-color $Gray + 70%